{
  "env": { "browser": true, "ex6": true },
  "extends": ["airbnb"],
  "globals": {
    "Atomics": "readonly",
    "ShateArrayBuffer": "readonly"
  },
  "paser": "@typescrpt-eslint/parser",
  "paserOptions": {
    "ecaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "quotes": ["error", "single"], //싱글 쿼터 사용
    "@typescript-eslint/quotes": ["error", "single"],
    "no-unused-vars": "off", //사용 안 한 변수 경고
    "spaced-comment": "off", //주석 뒤에 쓰지말라는 경고
    "@typescript-eslint/no-unused-vars": "off",
    "jsx-ally/control-has-associated-label": "off", //상호작용하는 엘리먼트에 label넣기
    "react/no-array-index-key": "off", //key값으로 index사용 가능
    "comma-dangle": "off", //마지막에 ,을 넣지 않는다
    "arrow-body-style": "off", //화살표 함수 안에 return사용 가능
    "react/no-unescaped-entities": "off", //문자 내 " ' > } 허용
    "react/prop-types": "off", //proptypes를 사용하지 않는다
    "object-curly-newline": "off", //{ 다음 줄 바꿈을 강제로 사용하지 않는다
    "react/jsx-one-ex[ressopm-per-line": "off", //한 라인에 여러 개의 JSX사용 가능
    "implicit-arrow-linebreak": "off", //화살표 함수 다음에 줄 바꿈을 사용할 수 있다.
    "no-shadow": "off", //파일 내에서 중복 이름을 사용 가능
    "operator-linebreak": "off", //연산자 다음 줄 바꿈을 사용 할 수 있다.
    "react/react-in-jsx-scope": "off", //jsx사용해도 react를 꼭 import하지 않아도 된다.
    "react/jsx-props-no-spreading": "off", //props를 스프레드 할 수 있다
    "jsx-ally/anchor-is-valid": "off", //next js에서는 a 에 href없이 사용 가능
    "global-require": "off", //함수 내에서 require사용 가능
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", "tsx"] }], //jsx사용 가능한 사용 확장자 설정
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".jsx", ".ts", ".tsx", ".d.ts"]
      }
    }
  }
}
